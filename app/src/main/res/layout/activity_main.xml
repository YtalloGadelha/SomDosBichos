<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9B9"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/cahorroId"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="135dp"
        android:src="@drawable/cao" />

    <ImageView
        android:id="@+id/gatoId"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/macacoId"
        android:layout_alignTop="@+id/cahorroId"
        android:src="@drawable/gato" />

    <ImageView
        android:id="@+id/leaoId"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cahorroId"
        android:layout_marginBottom="228dp"
        android:src="@drawable/leao" />

    <ImageView
        android:id="@+id/macacoId"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/leaoId"
        android:layout_marginEnd="55dp"
        android:src="@drawable/macaco" />

    <ImageView
        android:id="@+id/ovelhaId"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignStart="@+id/cahorroId"
        android:layout_alignTop="@+id/vacaId"
        android:src="@drawable/ovelha" />

    <ImageView
        android:id="@+id/vacaId"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/gatoId"
        android:layout_marginBottom="89dp"
        android:src="@drawable/vaca" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:src="@drawable/direitos" />
</RelativeLayout>